<% if user_signed_in? %>

<div id="supply_table" class="col-md-6">
	<h4 id="supply" class="">Supply</h4>
	<div id="supplies">
		
		<table class="table table-responsive" id="supplieslist">
			<thead>
				<tr>
					<th>name</th>
					<th>description</th>
					<th>condition</th>
					<th>quantity</th>
				</tr>
			</thead>
			<tbody>
			<% if @supplies != nil %>
				<% @supplies.each do |supply| %>
				<tr>
					<td>
						<%= supply.name %>
					</td>
					<td>
						<%= supply.description %>
					</td>
					<td>
						<%= supply.condition %>
					</td>
					<td>
						<%= supply.quantity %>
					</td>
					<td>
						<%= link_to "edit", "/supplies/#{supply.id}/edit" %>
					</td>
					<td>
						<%= link_to "delete", "/supplies/#{supply.id}", :method=>:delete %>
					</td>
				</tr>
				<% end %>
			<% end %>
			</tbody>
		</table>
		<div id="hidesupplies" class="pull-left btn">Hide</div>	
		<button class="pull-right btn btn-primary btn-lg" data-toggle="modal" data-target="#supplymodal">
	  Add New Supply
	</button>
	</div>
</div>
<% end %>